{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true /* enable all strict type-checking options */,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false /*   I like to be able to use undefined on params? */,
    /* Additional Checks */
    "noImplicitAny": true,
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */,
    "noUnusedParameters": false /* Report errors on unused parameters. false, eslint will check for that */,
    "noUnusedLocals": false,
    "isolatedModules": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*", "package.json", "tools/*", ".eslintrc.cjs"],
  "exclude": [".vscode/*", "dist/*", "out/*", "out/**/*", "node_modules/**/*"]
}
